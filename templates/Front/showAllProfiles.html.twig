{% extends 'base.html.twig' %}
{% block title %} Page d'accueil{% endblock %}
{% block body %}
<h1>Bienvenue </h1>
{% if is_granted('ROLE_ADMIN') %}
        <p>Vous êtes administrateur</p>
{% endif %}
<h2>Liste des passionnés de livres</h2>
<ul>
    {% for user in users  %}
        <li>
            <a href="{{ path('app_front_user_showProfile', {id: user.id}) }}">Voir le profil de {{ user.name}}</a>
        </li>
    {% endfor %}
</ul>
{% endblock %}

    
